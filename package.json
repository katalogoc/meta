{
  "name": "meta",
  "version": "1.0.0",
  "description": "Meta info service",
  "main": "index.js",
  "scripts": {
    "build": "tsc && cp ./src/schema.graphql ./dist",
    "build:image": "docker build -q -t katalogoc/meta:latest .",
    "db:init": "ts-node --files --project tsconfig.json bin/prepareDb.ts",
    "db:run": "bin/runDgraph.sh",
    "test": "npm run db:init && jest",
    "test:watch": "npm test -- --watch",
    "nodemon": "nodemon",
    "schema:publish": "apollo service:push --key service:postgres-day:2p5YYz-CY_kmCf_HYUJLIQ --endpoint \"http://localhost:8082/api\"",
    "schema:check": "apollo service:check --key service:postgres-day:2p5YYz-CY_kmCf_HYUJLIQ --endpoint \"http://localhost:8082/api\"",
    "schema:introspect": "curl -X POST -d \"@fixtures/introspect.json\" --header \"Content-Type: application/json\" http://localhost:8082 /api",
    "seed": "dotenv sequelize db:seed:all",
    "start": "node dist/run.js",
    "start:dev": "nodemon",
    "gen:apq": "persistgraphql src/interfaces/graphql/persistedQueries/ src/interfaces/graphql/persistedQueries/config.json",
    "lint": "tslint --project .",
    "codegen": "graphql-codegen --config codegen.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/katalogoc/meta.git"
  },
  "keywords": [
    "full-text",
    "books",
    "ssr"
  ],
  "author": "shonie",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/katalogoc/meta/issues"
  },
  "homepage": "https://github.com/katalogoc/meta#readme",
  "dependencies": {
    "@graphql-codegen/cli": "^1.8.2",
    "apollo-datasource": "^0.2.1",
    "apollo-server-koa": "^2.3.1",
    "dgraph-js": "^2.0.2",
    "dotenv": "^6.1.0",
    "dotenv-cli": "^1.4.0",
    "graphql": "^14.0.2",
    "graphql-import": "^0.7.1",
    "grpc": "^1.24.0",
    "hyped-logger": "git+https://github.com/katalogoc/hyped-logger.git",
    "koa": "^2.6.2",
    "koa-bodyparser": "^4.2.1",
    "koa-logger-winston": "0.0.2",
    "koa-router": "^7.4.0",
    "nconf": "^0.10.0",
    "pm2": "^3.2.4",
    "try-to-catch": "^2.0.0"
  },
  "devDependencies": {
    "@graphql-codegen/typescript": "1.8.2",
    "@graphql-codegen/typescript-document-nodes": "^1.8.2",
    "@graphql-codegen/typescript-resolvers": "^1.8.2",
    "@types/dotenv": "^6.1.0",
    "@types/google-protobuf": "^3.7.2",
    "@types/graphql": "^14.0.6",
    "@types/jest": "^24.0.18",
    "@types/lodash": "^4.14.144",
    "@types/nconf": "^0.10.0",
    "@types/node": "^10.12.21",
    "@types/protobufjs": "^6.0.0",
    "@types/sinon": "^7.0.5",
    "apollo": "^2.19.1",
    "apollo-server-testing": "^2.3.1",
    "jest": "^24.9.0",
    "nodemon": "^1.18.10",
    "prettier": "^1.19.1",
    "sinon": "^7.2.3",
    "ts-jest": "^24.1.0",
    "ts-node": "^8.0.2",
    "tslint": "^5.20.0",
    "typescript": "^3.7.0"
  }
}
